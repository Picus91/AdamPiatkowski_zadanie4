<Window x:Class="NET_ININ4_PR2._2_z5.OknoModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_ININ4_PR2._2_z5"
        mc:Ignorable="d"
        Title="OknoModel" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ListBox
            Name="Marka"
            ItemsSource="{Binding XPath=Silnik}"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <WrapPanel>
                            <TextBlock Text="Pojemność silnika: "/>
                            <TextBlock Text="{Binding XPath=PojemnośćSilnika}"/>
                        </WrapPanel>
                        <WrapPanel>
                            <TextBlock Text="   Moc Silnika: "/>
                            <TextBlock Text="{Binding XPath=MocSilnika}"/>
                        </WrapPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
