<Window x:Class="NET_ININ4_PR2._2_z5.OknoRodzaj"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_ININ4_PR2._2_z5"
        mc:Ignorable="d"
        Title="Marki Samochodów" 
        Height="450" 
        Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ListBox
            Name="Marka"
            ItemsSource="{Binding XPath=Marka}"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <WrapPanel>
                            <TextBlock Text="{Binding XPath=Nazwa}"/>
                        </WrapPanel>
                        <WrapPanel>
                            <TextBlock Text="   Kraj: "/>
                            <TextBlock Text="{Binding XPath=Kraj}"/>
                        </WrapPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button
            Grid.Row="1" Click="DostępneModele"
            >Dostępne Modele</Button>
    </Grid>
</Window>
